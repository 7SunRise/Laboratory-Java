<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.test.storetransactionsystem.SellersController">
   <children>
      <HBox layoutX="1.0" layoutY="3.0">
         <children>
            <VBox>
               <children>
                  <Label text="Surname"/>
                  <TextField fx:id="txtSurname"/>
                  <Label text="Name"/>
                  <TextField fx:id="txtName"/>
                  <Label text="Second name"/>
                  <TextField fx:id="txtSecond_name"/>
                  <Button mnemonicParsing="false" onAction="#onAddButtonClick" text="Add" />
                  <Button mnemonicParsing="false" onAction="#onUpdateButtonClick" text="Change" />
                  <Button mnemonicParsing="false" onAction="#onDeleteButtonClick" text="Delete" />
               </children>
            </VBox>
            <TableView fx:id="tableSellers" prefHeight="391.0" prefWidth="463.0">
               <columns>
                  <TableColumn fx:id="idCol" text="Id"/>
                  <TableColumn fx:id="SurnameCol" text="Surname"/>
                  <TableColumn fx:id="NameCol" text="Name"/>
                  <TableColumn fx:id="Second_nameCol" text="Second name"/>
               </columns>
            </TableView>
         </children>
      </HBox>
   </children>
</AnchorPane>